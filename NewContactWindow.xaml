<Window
    x:Class="ContactsApp.WPF.Learning.NewContactWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ContactsApp.WPF.Learning"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NewContactWindow"
    Width="400"
    Height="450"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Width="350" Margin="10">
            <Label
                HorizontalAlignment="Center"
                Content="ADD NEW CONTACT"
                FontSize="21"
                FontWeight="Heavy" />

            <TextBlock Text="Name" />
            <TextBox x:Name="nameTextBox" Margin="0,0,0,7" />

            <TextBlock Text="Email" />
            <TextBox x:Name="emailTextBox" Margin="0,0,0,7" />

            <TextBlock Text="Phone" />
            <TextBox x:Name="phoneTextBox" Margin="0,0,0,20" />

            <Button
                x:Name="saveContactButton"
                Height="32"
                Background="Green"
                Click="saveContactButton_Click"
                Content="Save"
                FontWeight="Bold"
                Foreground="White" />
        </StackPanel>
    </Grid>
</Window>
