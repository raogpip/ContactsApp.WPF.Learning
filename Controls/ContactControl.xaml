<UserControl
    x:Class="ContactsApp.WPF.Learning.Controls.ContactControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ContactsApp.WPF.Learning.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="90"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid Background="#AAE5E5E5">
        <StackPanel Margin="5">
            <TextBlock
                x:Name="nameTextBlock"
                FontSize="20"
                FontWeight="Bold"
                Text="Name Lastname" />
            <TextBlock
                x:Name="phoneTextBlock"
                FontSize="20"
                Foreground="blue"
                Text="PHONE" />
            <TextBlock
                x:Name="emailTextBlock"
                FontSize="20"
                FontStyle="Italic"
                Text="Email" />
        </StackPanel>
    </Grid>
</UserControl>
